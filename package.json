{
  "name": "inward-outward-portal",
  "version": "1.0.0",
  "description": "Inward-Outward Document Management System",
  "main": "main.js",
  "scripts": {
    "start": "electron . --enable-logging --disable-gpu",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "docx": "^9.1.0",
    "exceljs": "^4.4.0",
    "pdfkit": "^0.13.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "electron": "^27.3.11",
    "electron-builder": "^25.1.8"
  },
  "keywords": [
    "electron",
    "document",
    "management",
    "inward-outward"
  ],
  "author": "V&R",
  "license": "ISC",
  "build": {
    "appId": "com.techiostudios.inwardoutward",
    "productName": "Inward Outward Portal",
    "win": {
      "target": "nsis",
      "icon": "assets/app-icon.ico",
      "publish": null
    },
    "directories": {
      "output": "dist"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Inward Outward Portal",
      "deleteAppDataOnUninstall": true
    }
  }
}
